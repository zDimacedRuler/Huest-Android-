<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.amankumar.layouttest.UI.HOST.HostUpdateFacility">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="FACILITY"
                android:textColor="@color/colorTextBlack"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/host_food_CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorBackground"
                android:padding="14dp"
                android:text="FOOD" />

            <FrameLayout
                android:id="@+id/food_check_box_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp" />

            <CheckBox
                android:id="@+id/host_accommodation_CB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@color/colorBackground"
                android:padding="14dp"
                android:text="ACCOMMODATION"/>

            <FrameLayout
                android:id="@+id/accommodation_check_box_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp" />
            <Button
                android:id="@+id/hostSignUp3RegisrterButton"
                style="@style/MyButtonStyle"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
